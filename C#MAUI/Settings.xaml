<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
             x:Class="SafeDriver.Settings"
             Title="設定"
             Background="#FEFEFE">
    <VerticalStackLayout>
        <Label Text="     " FontSize="Medium" />

        <HorizontalStackLayout Margin="0,-14,16,0">
            <Frame HeightRequest="65" WidthRequest="360" Margin="16,16,16,0" BackgroundColor="#E9ECF1"  >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Text="   辨識系統" VerticalOptions="Center" Margin="0,-5,0,0" FontSize="Large"/>

