                </Grid>
            </Frame>
        </HorizontalStackLayout>



        <HorizontalStackLayout Margin="0,-16,16,0">
            <Frame HeightRequest="65" WidthRequest="360" Margin="16,16,16,0" BackgroundColor="#E9ECF1"  >
